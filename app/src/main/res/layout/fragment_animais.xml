<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5e9b9"
    tools:context=".numeros.NumerosFragment">

    <ImageButton
        android:id="@+id/cao"
        android:layout_width="145dp"
        android:layout_height="135dp"
        android:layout_marginTop="35dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/cao"

        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <ImageButton
        android:id="@+id/gato"
        android:layout_width="145dp"
        android:layout_height="135dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:layout_marginTop="35dp"
        android:src="@drawable/gato"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/macaco"
        android:layout_width="145dp"
        android:layout_height="135dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"

        android:src="@drawable/macaco"
        app:layout_constraintBottom_toTopOf="@+id/vaca"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/cao" />

    <ImageButton
        android:id="@+id/ovelha"
        android:layout_width="155dp"
        android:layout_height="135dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/ovelha"
        app:layout_constraintBottom_toTopOf="@+id/leao"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/gato" />

    <ImageButton
        android:id="@+id/vaca"
        android:layout_width="145dp"
        android:layout_height="135dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:layout_marginBottom="55dp"
        android:src="@drawable/vaca"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/guideline3" />

    <ImageButton
        android:id="@+id/leao"
        android:layout_width="145dp"
        android:layout_height="135dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/leao"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
  />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="\u00a9 Gilmar A.Fonseca"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>